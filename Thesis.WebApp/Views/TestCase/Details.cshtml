@model TestCaseViewModel

@{
    ViewData["Title"] = "Részletek";
}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="mx-auto text-center">Teszteset részletes leírása</h2>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Vissza</a>
</div>

<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Enabled)
    </dt>
    <dd class="col-sm-10">
        <span class="badge @(Model.Enabled ? "bg-success" : "bg-danger")">
            @(Model.Enabled ? "Igen" : "Nem")
        </span>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Input)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Input)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Size)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Size)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Unit)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Unit)
    </dd>
    <dt class="col-sm-2">
        Teszteredmények
    </dt>
    <dd class="col-sm-10">
        @ViewData[ViewDataKeys.NumberOfTestResults]
    </dd>
</dl>
